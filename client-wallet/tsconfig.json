{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "esnext"
    ],
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "**/*/*.spec.ts",
    "**/*/*.test.ts"
  ],
  "include": ["src/**/*"],
}