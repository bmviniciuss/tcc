generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PrismaTransactionType {
  CREDIT_CARD_PAYMENT
  DEBIT_CARD_PAYMENT
  WITHDRAWAL

  @@map("transactionTypeEnum")
}

enum PrismaServiceType {
  CARD_PAYMENT
  INTERNAL

  @@map("serviceTypeEnum")
}

model PrismaTransaction {
  id                   String                @id @default(uuid())
  clientId             String
  amount               Float
  type                 PrismaTransactionType
  transactionServiceId String?
  service              PrismaServiceType
  transactionDate      DateTime
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt

  @@map("transactions")
}
